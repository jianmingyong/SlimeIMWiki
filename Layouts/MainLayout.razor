@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Fixed>
        <Bar Breakpoint="Breakpoint.Desktop" Background="Background.Secondary" ThemeContrast="ThemeContrast.Dark"
             Style="box-shadow: 0 10px 8px rgba(0, 0, 0, 0.5)">
            <BarBrand>
                <BarItem>
                    <BarLink To="">SlimeIM Wiki</BarLink>
                </BarItem>
            </BarBrand>
            <BarToggler/>
            <BarMenu>
                <BarStart>
                    <BarItem>
                        <BarLink To="">Home</BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="Characters">Characters</BarLink>
                    </BarItem>
                </BarStart>
            </BarMenu>
        </Bar>
    </LayoutHeader>
    <LayoutContent Background="Background.Body">
        <Container Padding="Padding.Is4" Breakpoint="Breakpoint.Large" Background="Background.Secondary">
            @Body
        </Container>
    </LayoutContent>
</Layout>