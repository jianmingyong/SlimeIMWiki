@using SlimeIMWiki.ViewModels.Characters
@inherits ReactiveComponentBase<SlimeIMWiki.ViewModels.Characters.UnitIconViewModel>
@inject IServiceProvider ServiceProvider

@{ Debug.Assert(ViewModel != null, nameof(ViewModel) + " != null"); }

<Link To="@($"Characters/{Unit.Permalink}")"
      Position="Position.Relative"
      Width="Width.Px(100)" Height="Height.Px(100)"
      Style="user-select: none">
<Div Position="Position.Absolute.Start.Is0.Top.Is0"
     Padding="Padding.Is1.OnX"
     TextSize="TextSize.ExtraSmall" TextColor="TextColor.Body"
     Background="Background.Body"
     Style="z-index:4; transform: translateY(-100%)">
    @DisplayText
</Div>

@if (Unit.HasEx || Unit.HasAttributeUnbound)
{
    <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
           Width="Width.Is25"
           Source="image/rarity/badgeClassUp.png"
           Style="z-index: 3"/>
}

<ImageProxy Position="Position.Absolute.End.Is0.Top.Is0"
       Width="Width.Is25"
       Source="@ViewModel.FirstIcon"
       Style="z-index: 3"/>

<ImageProxy Position="Position.Absolute.End.Is0"
       Width="Width.Is25"
       Source="@ViewModel.SecondIcon"
       Style="z-index: 3; top: 25%"/>

<ImageProxy Position="Position.Absolute.Start.Is50.Translate.MiddleX"
       Width="Width.Px(99)" Height="Height.Px(99)"
       Source="@Unit.Icon"
       Style="z-index: 1"/>

@switch (Unit.InitialRarity)
{
    case 3:
    {
        <ImageProxy Position="Position.Absolute.Start.Is0.Bottom.Is0"
               Width="Width.Is33"
               Source="image/rarity/starCharaL3A.png"
               Style="z-index: 3"/>

        <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
               Width="Width.Is100"
               Source="image/rarity/frameMemberM3.png"
               Style="z-index: 2"/>

        <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
               Width="Width.Is100"
               Source="image/rarity/baseMemberM3.png"
               Style="z-index: 0"/>

        break;
    }

    case 4:
    {
        <ImageProxy Position="Position.Absolute.Start.Is0.Bottom.Is0"
               Width="Width.Is33"
               Source="image/rarity/starCharaL4A.png"
               Style="z-index: 3"/>

        <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
               Width="Width.Is100"
               Source="image/rarity/frameMemberM4.png"
               Style="z-index: 2"/>

        <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
               Width="Width.Is100"
               Source="image/rarity/baseMemberM4.png"
               Style="z-index: 0"/>

        break;
    }

    case 5:
    {
        if (Unit.IsEx)
        {
            <ImageProxy Position="Position.Absolute.Start.Is0.Bottom.Is0"
                   Width="Width.Is33"
                   Source="image/rarity/starCharaL6UA.png"
                   Style="z-index: 3"/>

            <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
                   Width="Width.Is100"
                   Source="image/rarity/frameMemberM6u.png"
                   Style="z-index: 2"/>

            <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
                   Width="Width.Is100"
                   Source="image/rarity/baseMemberM6u.png"
                   Style="z-index: 0"/>
        }
        else if (Unit.IsAttributeUnbound)
        {
            <ImageProxy Position="Position.Absolute.Start.Is0.Bottom.Is0"
                   Width="Width.Is33"
                   Source="image/rarity/starCharaL6UPA.png"
                   Style="z-index: 3"/>

            <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
                   Width="Width.Is100"
                   Source="image/rarity/frameMemberM6up.png"
                   Style="z-index: 2"/>

            <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
                   Width="Width.Is100"
                   Source="image/rarity/baseMemberM6up.png"
                   Style="z-index: 0"/>
        }
        else
        {
            <ImageProxy Position="Position.Absolute.Start.Is0.Bottom.Is0"
                   Width="Width.Is33"
                   Source="image/rarity/starCharaL5A.png"
                   Style="z-index: 3"/>

            <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
                   Width="Width.Is100"
                   Source="image/rarity/frameMemberM5.png"
                   Style="z-index: 2"/>

            <ImageProxy Position="Position.Absolute.Start.Is0.Top.Is0"
                   Width="Width.Is100"
                   Source="image/rarity/baseMemberM5.png"
                   Style="z-index: 0"/>
        }

        break;
    }
}
</Link>

@code
{
    [Parameter]
    [EditorRequired]
    public required BattleUnit Unit { get; set; }

    [Parameter]
    [EditorRequired]
    public required string DisplayText { get; set; }

    protected override void OnInitialized()
    {
        ViewModel = ActivatorUtilities.CreateInstance<UnitIconViewModel>(ServiceProvider, Unit);
        base.OnInitialized();
    }
}