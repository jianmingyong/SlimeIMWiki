@using SlimeIMWiki.Services
@inherits BaseFilterComponent

<FilterComponent Key="EX Enhancement" DisplayText="EX/EXU Enhancement" IsRemoveMode="IsRemoveMode" OnClick="Execute">
    <ImageProxy Class="filterIcon" Source="image/rarity/badgeClassUp.png" Width="Width.Em(1.5)" Height="Height.Em(1.5)"/>
</FilterComponent>

@code
{
    protected override void OnInitialized()
    {
        Filter ??= new Filter("EX Enhancement", unit => unit.HasEx || unit.HasAttributeUnbound,
            @<ExEnhancementFilter IsRemoveMode="true" Filter="Filter"/>);

        base.OnInitialized();
    }
}